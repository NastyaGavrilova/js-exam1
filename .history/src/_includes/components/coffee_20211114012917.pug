mixin coffee()
  .c-coffee#js-coffee
    .c-coffee__wrapper 
      .c-coffee__title 
        +title({
          classList:"e-title--nunito",
          content:"Choose Your Favorite",
        })
        +title({
          classList:"e-title--montserrat",
          content:"CHUẨN GU ĐÚNG VỊ",
        })
      .c-coffee__rectangle
      .c-coffee__swiper 
        +swiper()
    .c-coffee__modal#js-coffee-modal
      +modal-window({
        className: "e-slide__description",
        description:"Lorem ipsum dolor sit amet consectetur adipisicing elit. Eius iste obcaecati voluptatem accusamus sed excepturi fugiat doloribus, sit, incidunt consequatur inventore qui amet consequuntur explicabo fugit hic, quibusdam laboriosam veniam error nobis iusto nisi quia fuga. Ipsam nostrum in nesciunt ea repellat tempore. Fugiat aperiam blanditiis fugit qui ex quibusdam!",
        price: "99.000",
      })



