  .swiper-first.swiper
    .swiper-first__wrapper.swiper-wrapper
      .swiper-slide-first.swiper-slide
        +swiper-slide({
          src:"./assets/images/coffe-product1.png",
          price: "99.000",
          title: "REVO Morning",
          description:"đắng, hậu ngọt, hương hoa",

        })(id= "js-swiper-first-btn1")

      .swiper-slide-first.swiper-slide
        +swiper-slide({
          src:"./assets/images/coffe-product2.png",
          price: "85.000",
          title: "REVO Everyday",
          description:"cân bằng, hậu đắng, vị chocolate ",
          id:"js-swiper-first-btn2"
        }) 
      .swiper-slide-first.swiper-slide
